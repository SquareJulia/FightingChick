<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/big_padding"
    android:theme="@style/AppTheme"

    tools:context=".EditPersonalDocumentFragment">
    <ImageButton
        android:id="@+id/back_from_edit_personal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@mipmap/baseline_arrow_back_black_24" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CircleImageViewForEditInEditFragment"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/default_profile"
        android:clickable="true"
        />



    <TextView
        android:id="@+id/TextViewForOriginNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="昵称"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/EditNickName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center"
            android:hint="请在此输入新昵称"
            android:maxLines="1"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/clear_nickname"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom|right"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@mipmap/baseline_backspace_black_36" />

    </LinearLayout>


    <TextView
        android:id="@+id/OriginFightForeverSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="永动宣言"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/EditFightForeverSlogan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:hint="请在此输入新的永动宣言"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:maxLines="3"
            android:textSize="25sp" />



        <ImageButton
            android:id="@+id/clear_slogan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom|right"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@mipmap/baseline_backspace_black_36" />

    </LinearLayout>

    <ProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ProgressBarInEditPersonalDocumentFragment"/>


    <Button
        android:id="@+id/ButtonForSaveChangeInPersonalDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="保存"
        android:layout_marginTop="10dp"
        android:textSize="26sp"
        android:theme="@style/AppTheme" />



</LinearLayout>