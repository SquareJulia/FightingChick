<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditPersonalDocumentFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NickNameEditLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原昵称"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:id="@+id/OriginNickNameTips"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/OriginNickNameTips"
            android:layout_marginLeft="20dp"
            android:text="昵称"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:id="@+id/TextViewForOriginNickName"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextViewForOriginNickName"
            android:hint="请在此处输入新昵称"
            android:textSize="25sp"
            android:maxLines="1"
            android:id="@+id/EditNickName"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="原永动宣言"
            android:id="@+id/FightingForeverSloganTips"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/FightingForeverSloganTips"
            android:text="永动宣言"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textSize="26sp"
            android:id="@+id/OriginFightForeverSlogan"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/OriginFightForeverSlogan"
            android:hint="请在此处输入新的永动宣言"
            android:textSize="25sp"
            android:gravity="center"
            android:maxLines="3"
            android:id="@+id/EditFightForeverSlogan"/>

    </RelativeLayout>

    <Button
        android:id="@+id/ButtonForSaveChangeInPersonalDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="保存"
        android:textSize="28sp"
        android:background="@color/design_default_color_surface"/>

</LinearLayout>